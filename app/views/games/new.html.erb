<div class="wrapper">
  <div class="allof">

    <div class="hone">
      <h1>Long Word Challenge!</h1>
    </div>


  <ul class="list">

    <% @letters.each do |letter| %>
      <li>
        <h3>
        <%=letter%>

        </h3>
      </li>
      <% end %>
  </ul>


  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Word">
    <input name="letters" type="hidden" value="<%= @letters.join('|') %>"/>
    <input type="submit" value="How did I go?">
  </form>
  </div>
</div>
